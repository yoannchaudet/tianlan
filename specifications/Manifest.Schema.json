{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Manifest file describing deployments.",
  "type": "object",
  "definitions": {
    "certificate": {
      "description": "A certificate stored in a Key Vault.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the certificate (in Key Vault)."
        },
        "thumbprint": {
          "type": "string",
          "description": "SHA-1 thumbprint of the certificate."
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "thumbprint"
      ]
    },
    "environment": {
      "description": "Environment definition (e.g. dev, staging, production).",
      "type": "object",
      "properties": {
        "location": {
          "$ref": "#/definitions/location"
        },
        "subscriptionId": {
          "$ref": "#/definitions/subscriptionId"
        },
        "servicePrincipals": {
          "type": "object",
          "description": "Environment service principals (= automation users).",
          "properties": {
            "admin": {
              "description": "Administrator identity for the environment (used to provision resources and grant access to other service principals).",
              "$ref": "#/definitions/servicePrincipal"
            }
          },
          "patternProperties": {
            "^[a-zA-Z]{1,256}$": {
              "$ref": "#/definitions/servicePrincipal"
            }
          },
          "additionalProperties": true,
          "required": [
            "admin"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "subscriptionId",
        "location",
        "servicePrincipals"
      ]
    },
    "location": {
      "description": "Azure location.",
      "type": "string",
      "enum": [
        "eastasia",
        "southeastasia",
        "centralus",
        "eastus",
        "eastus2",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "southindia",
        "centralindia",
        "westindia",
        "canadacentral",
        "canadaeast",
        "uksouth",
        "ukwest",
        "westcentralus",
        "westus2",
        "koreacentral",
        "koreasouth",
        "francecentral",
        "francesouth",
        "australiacentral",
        "australiacentral2"
      ]
    },
    "servicePrincipal": {
      "description": "Azure Active Directory service principal (= identity other than a user).",
      "type": "object",
      "properties": {
        "id": {
          "description": "The service principal identifier (or object identifier).",
          "type": "string"
        },
        "applicationId": {
          "description": "The application identifier the service principal is associated to.",
          "type": "string"
        },
        "tenantId": {
          "description": "The tenant identifier (= identifier of the Azure Active Directory) in which the service prinpal lives.",
          "type": "string"
        },
        "certificate": {
          "$ref": "#/definitions/certificate"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "applicationId",
        "tenantId",
        "certificate"
      ]
    },
    "subscriptionId": {
      "description": "Azure Subscription identifier.",
      "type": "string"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "environments": {
      "description": "Environments (e.g. development, integration, staging, production).",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9\\-\\.]{1,90}$": {
          "$ref": "#/definitions/environment"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}