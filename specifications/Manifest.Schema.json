{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Manifest file describing deployments.",
  "type": "object",
  "definitions": {
    "environment": {
      "type": "object",
      "properties": {
        "subscriptionId": {
          "$ref": "#/definitions/subscriptionId"
        },
        "location": {
          "$ref": "#/definitions/location"
        }
      },
      "required": [
        "subscriptionId",
        "location"
      ],
      "additionalProperties": false
    },
    "resourceGroup": {
      "type": "object",
      "description": "Azure resource group.",
      "properties": {
        "templates": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Azure Resource Manager template name (without extension)."
          },
          "minItems": 1
        }
      }
    },
    "subscriptionId": {
      "type": "string",
      "description": "Azure Subscription identifier."
    },
    "location": {
      "type": "string",
      "description": "Azure location.",
      "enum": [
        "eastasia",
        "southeastasia",
        "centralus",
        "eastus",
        "eastus2",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "southindia",
        "centralindia",
        "westindia",
        "canadacentral",
        "canadaeast",
        "uksouth",
        "ukwest",
        "westcentralus",
        "westus2",
        "koreacentral",
        "koreasouth",
        "francecentral",
        "francesouth",
        "australiacentral",
        "australiacentral2"
      ]
    },
    "servicePrincipal": {
      "type": "object",
      "description": "Azure Active Directory service principal (= identity other than a user).",
      "properties": {
        "id": {
          "type": "string",
          "description": "The service principal identifier (or object identifier)."
        },
        "applicationId": {
          "type": "string",
          "description": "The application identifier the service principal is associated to."
        },
        "tenantId": {
          "type": "string",
          "description": "The tenant identifier (= identifier of the Azure Active Directory) in which the service prinpal lives."
        },
        "certificateThumbprint": {
          "type": "string",
          "description": "Thumbprint (SHA-1) for the current certificate associated to the service principal."
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "applicationId",
        "tenantId",
        "certificateThumbprint"
      ]
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "servicePrincipals": {
      "description": "Set of service principals used to manage permissions.",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9\\-\\.]{1,256}$": {
          "$ref": "#/definitions/servicePrincipal"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "environments": {
      "description": "A set of environments (e.g. development, integration, staging, production).",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9\\-\\.]{1,90}$": {
          "$ref": "#/definitions/environment"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "resourceGroups": {
      "description": "Set of resource groups to deploy.",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9\\-\\.]{1,90}$": {
          "$ref": "#/definitions/resourceGroup"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}